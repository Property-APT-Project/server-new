<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.home.mapper.MemberMapper">
	<resultMap type="memberDto" id="member">
		<result column="phone_number" property="phoneNumber"/>
	</resultMap>

	<select id="findById" parameterType="long" resultMap="member">
		SELECT * FROM members WHERE id = #{id}
	</select>
	
	<select id="findByEmail" parameterType="string" resultMap="member">
		SELECT * FROM members WHERE email = #{email}
	</select>
	
	<select id="findAll" resultMap="member">
		SELECT * FROM members
	</select>
	
	<insert id="save" parameterType="memberDto">
		INSERT INTO members (id, email, name, password, address, phone_number)
		VALUES (#{id}, #{email}, #{name}, #{password}, #{address}, #{phoneNumber})
	</insert>
	
	<update id="update" parameterType="memberDto">
		UPDATE members 
		SET name = #{name}, password = #{password}, address = #{address}, phone_number = #{phoneNumber}
		WHERE id = #{id}
	</update>

	<update id="updateByEmail" parameterType="memberDto">
		UPDATE members
		SET name = #{name}, password = #{password}, address = #{address}, phone_number = #{phoneNumber}
		WHERE email = #{email}
	</update>

	<delete id="delete" parameterType="long">
		DELETE FROM members where id = #{id}
	</delete>

	<delete id="deleteByEmail" parameterType="string">
		DELETE FROM members where email = #{email}
	</delete>
</mapper>
