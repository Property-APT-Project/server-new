<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.home.mapper.CommentMapper">
  <resultMap type="commentDto" id="comment">
    <result column="user_id" property="userId"/>
    <result column="post_id" property="postId"/>
    <result column="create_time" property="createTime"/>
  </resultMap>

  <select id="findById" parameterType="long" resultMap="comment">
    SELECT *
    FROM comments
    WHERE id = #{id}
  </select>

  <select id="findByPostId" parameterType="long" resultMap="comment">
    SELECT *
    FROM comments
    WHERE post_id = #{postId}
  </select>

  <select id="findAll" resultMap="comment">
    SELECT *
    FROM comments
  </select>

  <insert id="create" parameterType="commentDto">
    INSERT INTO comments (user_id, post_id, content, `like`, create_time)
    VALUES (#{userId}, #{postId}, #{content}, #{like}, #{createTime})
  </insert>

  <update id="update" parameterType="commentDto">
    UPDATE comments
    <set>
      <if test="content != null">content = #{content},</if>
      <if test="like != null">`like` = #{like},</if>
    </set>
    WHERE id = #{id}
  </update>

  <delete id="delete" parameterType="long">
    DELETE FROM comments where id = #{id}
  </delete>

</mapper>
